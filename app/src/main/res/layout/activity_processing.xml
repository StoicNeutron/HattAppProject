<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#2196F3"
    tools:context=".Processing">

    <ImageView
        android:id="@+id/logoView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hattapp_logo" />

    <Button
        android:id="@+id/p1"
        android:padding="5dp"
        android:background="@drawable/outline_gray_dark"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="@id/p2"
        app:layout_constraintTop_toBottomOf="@id/logoView" />

    <Button
        android:id="@+id/p2"
        android:padding="5dp"
        android:background="@drawable/outline_gray_dark"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoView" />

    <Button
        android:id="@+id/p3"
        android:padding="5dp"
        android:background="@drawable/outline_gray_dark"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="@id/p2"
        app:layout_constraintTop_toBottomOf="@id/logoView" />

</androidx.constraintlayout.widget.ConstraintLayout>